# API target
FANVISE_API_URL=http://localhost:3000/api/chat
FANVISE_API_TIMEOUT_SECONDS=240
FANVISE_API_RETRIES=1

# Optional evaluation context injection (matches production request shape)
FANVISE_EVAL_ACTIVE_TEAM_ID=
FANVISE_EVAL_ACTIVE_LEAGUE_ID=
FANVISE_EVAL_TEAM_NAME=
FANVISE_EVAL_LANGUAGE=

# Metric behavior
FANVISE_STRICT_METRICS=false
FANVISE_FAIL_ON_CRITICAL=true
# Optional JSON overrides, values in [0, 1]
# Example: {"relevancy":0.75,"faithfulness":0.8,"actionability":0.8}
FANVISE_METRIC_THRESHOLDS=

# Judge provider options: none | gemini | openai | ollama | local
FANVISE_JUDGE_PROVIDER=none
FANVISE_JUDGE_MODEL=
FANVISE_JUDGE_BASE_URL=

# Gemini judge (set one key style used by your setup)
GOOGLE_API_KEY=
GEMINI_API_KEY=
FANVISE_GEMINI_USE_VERTEXAI=false

# OpenAI judge
OPENAI_API_KEY=
OPENAI_BASE_URL=

# Ollama judge
OLLAMA_BASE_URL=http://localhost:11434

# Local OpenAI-compatible judge endpoint
LOCAL_JUDGE_API_KEY=
